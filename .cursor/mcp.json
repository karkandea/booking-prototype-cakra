{
  "mcpServers": {
    "task-master-ai": {
      "command": "npx",
      "args": ["-y", "task-master-ai"],
      "env": {
        "ANTHROPIC_API_KEY": "",
        "PERPLEXITY_API_KEY": "",
        "OPENAI_API_KEY": "",
        "GOOGLE_API_KEY": "",
        "XAI_API_KEY": "",
        "OPENROUTER_API_KEY": "",
        "MISTRAL_API_KEY": "",
        "AZURE_OPENAI_API_KEY": "",
        "OLLAMA_API_KEY": ""
      }
    },
    "nextjs": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-nextjs"]
    },
    "vercel": {
      "command": "npx",
      "args": ["-y", "@vercel/mcp"],
      "env": {
        "VERCEL_TOKEN": ""
      }
    }
  }
}
